{
    "include": ["src"],
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Node",
        "noImplicitAny": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "strict": true
    },
    "exclude": ["dist", "node_modules"]
}
