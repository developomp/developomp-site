{
    "hosting": [
        {
            "target": "main",
            "cleanUrls": true,
            "public": "apps/main/build",
            "rewrites": [
                {
                    "source": "**",
                    "destination": "/index.html"
                }
            ],
            "ignore": ["**/.*"]
        },
        {
            "target": "blog",
            "cleanUrls": true,
            "public": "apps/blog/build",
            "ignore": ["**/.*"]
        },
        {
            "target": "portfolio",
            "cleanUrls": true,
            "public": "apps/portfolio/dist",
            "rewrites": [
                {
                    "source": "**",
                    "destination": "/index.html"
                }
            ],
            "ignore": ["**/.*"]
        }
    ]
}
